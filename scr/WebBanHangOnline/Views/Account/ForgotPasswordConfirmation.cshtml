@{
    ViewBag.Title = "Xác nhận quên mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">


<style>
    .news_section_container {
        margin-top: 150px;
        font-family: Arial;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding-bottom: 15px;
        padding-top: 25px;
        margin-bottom: 25px;
    }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">@ViewBag.Title</h1>
            <p>Vui lòng kiểm tra email để nhận liên kết và cập nhật lại mật khẩu!</p>
        </div>
    </div>
</div>