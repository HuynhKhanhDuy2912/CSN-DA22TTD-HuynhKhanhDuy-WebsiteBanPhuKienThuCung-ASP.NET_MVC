@model WebBanHangOnline.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 180px;">
    <div class="col-md-8">
        <h2 id="title" class="text-center">@ViewBag.Title</h2>
        <h5 class="text-center">Vui lòng nhập email của bạn bên dưới và làm theo hướng dẫn để cập nhật mật khẩu mới!</h5>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group" style="margin-top: 30px; margin-left: 130px;">
                <div class="col-md-10">
                    <div class="input-group">
                        <label for="Email" class="control-label" style="padding-top: 10px; padding-right: 20px; font-size: 16px;">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập email của bạn vào đây" })
                    </div>
                </div>
            </div>
            <div class="form-group" style="text-align: right; margin-left: 130px;">
                <div class="col-md-offset-2 col-md-10">
                    <input style="padding-top: 7px;" type="submit" class="btn btn-sm btn-outline-dark" value="Gửi liên kết" />
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
