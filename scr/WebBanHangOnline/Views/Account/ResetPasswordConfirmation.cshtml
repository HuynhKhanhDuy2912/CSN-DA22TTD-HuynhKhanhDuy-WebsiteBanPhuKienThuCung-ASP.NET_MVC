@{
    ViewBag.Title = "Xác nhận cập nhật mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_section_container {
        margin-top: 150px;
        font-family: Arial;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding-bottom: 15px;
        padding-top: 25px;
        margin-bottom: 25px;
    }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">@ViewBag.Title</h1>
            Mật khẩu của bạn đã được đặt lại. Vui lòng nhấn @Html.ActionLink("vào đây để đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </div>
    </div>
</div>