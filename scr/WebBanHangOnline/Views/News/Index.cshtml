﻿@model PagedList.PagedList<WebBanHangOnline.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Tin tức";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css">
<link href="~/Content/PagedList.css" rel="stylesheet" />


<style>

.news-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    background-color: #fff;
    transition: box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.news-item:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.img-box {
    width: 100%;
    height: 200px;
    overflow: hidden;
    position: relative;
    margin-bottom: 15px;
}

.img-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.img-box img:hover {
    transform: scale(1.1);
}

.news-title {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.news-title a {
    color: firebrick;
    text-decoration: none;
}

.news-title a:hover {
    color: red;
}

.news-date {
    font-size: 14px;
    color: #777;
    margin-bottom: 10px;
}

.news-description {
    font-size: 14px;
    color: #555;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.row > .col-md-4 {
    display: flex;
    flex-direction: column;
}

.title-news {
    font-size: 2rem;
    border-bottom: 3px solid #FF7F50;
    padding-bottom: 15px;
    padding-top: 25px;
    margin-bottom: 25px;
    color: orangered;
    font-weight: bold;
}

</style>

<div class="container news_section_container">
    <div class="row" id="breadcrumbs">
        <div class="col">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ </a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news text-center" style="font-size: 2rem; color: orangered;">Các tin tức hỗ trợ khách hàng về chế độ dinh dưỡng, cách chăm sóc thú cưng cùng với các sản phẩm dành cho thú cưng</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4 d-flex">
                    <div class="news-item">
                        <div class="img-box">
                            <a href="/@item.Alias-n@(item.Id)" title="@item.Title">
                                <img src="@item.Image" alt="@item.Title" />
                            </a>
                        </div>
                        <div class="content-box">
                            <h3 class="news-title">
                                <a href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a>
                            </h3>
                            <p class="news-date"><i class="fa-solid fa-calendar-days"></i> @item.CreatedDate.ToString("dd/MM/yyyy") &nbsp;&nbsp;&nbsp;<i class="fa-solid fa-user"></i> Huỳnh Khánh Duy</p>
                            <p class="news-description" style="color: black;">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-12" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }
</div>
